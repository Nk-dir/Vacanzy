<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <% if (booking.listing.images && booking.listing.images.length > 0) { %>
                <img src="<%= booking.listing.images[0].url %>" class="img-fluid rounded-start h-100" alt="<%= booking.listing.title %>" style="object-fit: cover;">
            <% } else { %>
                <div class="placeholder-image d-flex align-items-center justify-content-center h-100 bg-light rounded-start">
                    <i class="fas fa-home fa-3x text-muted"></i>
                </div>
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h5 class="card-title">
                            <a href="/listings/<%= booking.listing._id %>" class="text-decoration-none">
                                <%= booking.listing.title %>
                            </a>
                        </h5>
                        <p class="text-muted mb-2">
                            <i class="fas fa-map-marker-alt me-1"></i>
                            <%= booking.listing.location %>
                        </p>
                    </div>
                    <div class="text-end">
                        <% if (type === 'upcoming') { %>
                            <span class="badge bg-success">Upcoming</span>
                        <% } else if (type === 'current') { %>
                            <span class="badge bg-info">Current Stay</span>
                        <% } else if (type === 'past') { %>
                            <span class="badge bg-secondary">Completed</span>
                        <% } else if (type === 'cancelled') { %>
                            <span class="badge bg-danger">Cancelled</span>
                        <% } %>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <small class="text-muted">Check-in</small>
                        <div class="fw-bold">
                            <%= new Date(booking.checkIn).toLocaleDateString('en-US', { 
                                weekday: 'short', 
                                month: 'short', 
                                day: 'numeric', 
                                year: 'numeric' 
                            }) %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted">Check-out</small>
                        <div class="fw-bold">
                            <%= new Date(booking.checkOut).toLocaleDateString('en-US', { 
                                weekday: 'short', 
                                month: 'short', 
                                day: 'numeric', 
                                year: 'numeric' 
                            }) %>
                        </div>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-6">
                        <small class="text-muted">Guests</small>
                        <div class="fw-bold">
                            <i class="fas fa-user me-1"></i>
                            <%= booking.guests %> <%= booking.guests === 1 ? 'guest' : 'guests' %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted">Total Cost</small>
                        <div class="fw-bold text-success">
                            $<%= booking.totalPrice.toLocaleString() %>
                        </div>
                    </div>
                </div>

                <% if (booking.specialRequests && booking.specialRequests.trim()) { %>
                <div class="mt-2">
                    <small class="text-muted">Special Requests</small>
                    <div class="small"><%= booking.specialRequests %></div>
                </div>
                <% } %>

                <div class="mt-3 d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        Booked on <%= new Date(booking.createdAt).toLocaleDateString('en-US', { 
                            month: 'short', 
                            day: 'numeric', 
                            year: 'numeric' 
                        }) %>
                    </small>
                    
                    <div class="btn-group btn-group-sm">
                        <a href="/listings/<%= booking.listing._id %>" class="btn btn-outline-primary btn-sm">
                            View Listing
                        </a>
                        <% if (type === 'upcoming') { %>
                            <button class="btn btn-outline-secondary btn-sm" onclick="showBookingDetails('<%= booking._id %>')">
                                Details
                            </button>
                        <% } else if (type === 'past') { %>
                            <button class="btn btn-outline-success btn-sm" onclick="writeReview('<%= booking.listing._id %>')">
                                Write Review
                            </button>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% if (type === 'current') { %>
<div class="alert alert-info mt-2">
    <i class="fas fa-info-circle me-2"></i>
    <strong>Currently staying here!</strong> 
    Enjoy your stay and don't forget to check out by <%= new Date(booking.checkOut).toLocaleDateString() %>.
</div>
<% } %>

<% if (type === 'upcoming') { %>
    <% 
    const daysUntilCheckIn = Math.ceil((new Date(booking.checkIn) - new Date()) / (1000 * 60 * 60 * 24));
    if (daysUntilCheckIn <= 7) { 
    %>
    <div class="alert alert-warning mt-2">
        <i class="fas fa-clock me-2"></i>
        <strong>Coming up soon!</strong> 
        Your stay begins in <%= daysUntilCheckIn %> <%= daysUntilCheckIn === 1 ? 'day' : 'days' %>.
    </div>
    <% } %>
<% } %>