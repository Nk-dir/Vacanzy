<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <% if (reservation.listing.images && reservation.listing.images.length > 0) { %>
                <img src="<%= reservation.listing.images[0].url %>" class="img-fluid rounded-start h-100" alt="<%= reservation.listing.title %>" style="object-fit: cover;">
            <% } else { %>
                <div class="placeholder-image d-flex align-items-center justify-content-center h-100 bg-light rounded-start">
                    <i class="fas fa-home fa-3x text-muted"></i>
                </div>
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h5 class="card-title">
                            <%= reservation.listing.title %>
                        </h5>
                        <p class="text-muted mb-2">
                            <i class="fas fa-user me-1"></i>
                            Guest: <strong><%= reservation.guest.username %></strong>
                        </p>
                        <p class="text-muted mb-2">
                            <i class="fas fa-envelope me-1"></i>
                            <%= reservation.guest.email %>
                        </p>
                    </div>
                    <div class="text-end">
                        <% if (type === 'upcoming') { %>
                            <span class="badge bg-warning">Arriving Soon</span>
                        <% } else if (type === 'current') { %>
                            <span class="badge bg-success">Currently Staying</span>
                        <% } else if (type === 'past') { %>
                            <span class="badge bg-secondary">Completed Stay</span>
                        <% } %>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <small class="text-muted">Check-in</small>
                        <div class="fw-bold">
                            <%= new Date(reservation.checkIn).toLocaleDateString('en-US', { 
                                weekday: 'short', 
                                month: 'short', 
                                day: 'numeric', 
                                year: 'numeric' 
                            }) %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted">Check-out</small>
                        <div class="fw-bold">
                            <%= new Date(reservation.checkOut).toLocaleDateString('en-US', { 
                                weekday: 'short', 
                                month: 'short', 
                                day: 'numeric', 
                                year: 'numeric' 
                            }) %>
                        </div>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-6">
                        <small class="text-muted">Guests</small>
                        <div class="fw-bold">
                            <i class="fas fa-users me-1"></i>
                            <%= reservation.guests %> <%= reservation.guests === 1 ? 'guest' : 'guests' %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted">Earnings</small>
                        <div class="fw-bold text-success">
                            $<%= reservation.totalPrice.toLocaleString() %>
                        </div>
                    </div>
                </div>

                <% if (reservation.specialRequests && reservation.specialRequests.trim()) { %>
                <div class="mt-2">
                    <small class="text-muted">Special Requests</small>
                    <div class="small"><%= reservation.specialRequests %></div>
                </div>
                <% } %>

                <div class="mt-3 d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        Booked on <%= new Date(reservation.createdAt).toLocaleDateString('en-US', { 
                            month: 'short', 
                            day: 'numeric', 
                            year: 'numeric' 
                        }) %>
                    </small>
                    
                    <div class="btn-group btn-group-sm">
                        <% if (type === 'upcoming') { %>
                            <button class="btn btn-outline-info btn-sm" onclick="contactGuest('<%= reservation.guest.email %>')">
                                <i class="fas fa-envelope me-1"></i>Contact Guest
                            </button>
                        <% } else if (type === 'current') { %>
                            <button class="btn btn-outline-success btn-sm" onclick="checkOnGuest('<%= reservation._id %>')">
                                <i class="fas fa-phone me-1"></i>Check In
                            </button>
                        <% } %>
                        <button class="btn btn-outline-secondary btn-sm" onclick="viewReservationDetails('<%= reservation._id %>')">
                            <i class="fas fa-info-circle me-1"></i>Details
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% if (type === 'current') { %>
<div class="alert alert-success mt-2">
    <i class="fas fa-home me-2"></i>
    <strong>Guest is currently staying!</strong> 
    They're scheduled to check out on <%= new Date(reservation.checkOut).toLocaleDateString() %>.
</div>
<% } %>

<% if (type === 'upcoming') { %>
    <% 
    const daysUntilCheckIn = Math.ceil((new Date(reservation.checkIn) - new Date()) / (1000 * 60 * 60 * 24));
    if (daysUntilCheckIn <= 7) { 
    %>
    <div class="alert alert-warning mt-2">
        <i class="fas fa-clock me-2"></i>
        <strong>Guest arriving soon!</strong> 
        <%= reservation.guest.username %> will check in in <%= daysUntilCheckIn %> <%= daysUntilCheckIn === 1 ? 'day' : 'days' %>.
    </div>
    <% } %>
<% } %>