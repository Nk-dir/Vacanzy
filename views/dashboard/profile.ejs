<%- layout("/layouts/boilerplate") %>

<div class="container mt-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="profile-avatar mb-3">
                        <div class="avatar-circle">
                            <%= user.username.charAt(0).toUpperCase() %>
                        </div>
                    </div>
                    <h5 class="card-title">Welcome, <%= user.username %>!</h5>
                    <p class="text-muted"><%= user.email %></p>
                </div>
            </div>
            
            <div class="list-group mt-3">
                <a href="/dashboard" class="list-group-item list-group-item-action">
                    <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                </a>
                <a href="/dashboard/profile" class="list-group-item list-group-item-action active">
                    <i class="fas fa-user me-2"></i>Profile
                </a>
                <a href="/listings/new" class="list-group-item list-group-item-action">
                    <i class="fas fa-plus me-2"></i>Add Listing
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="row">
                <!-- Profile Information -->
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Profile Information</h5>
                            <button class="btn btn-outline-primary btn-sm" onclick="editProfile()">
                                <i class="fas fa-edit me-1"></i>Edit
                            </button>
                        </div>
                        <div class="card-body">
                            <form id="profileForm" action="/dashboard/profile/update" method="POST">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Username</label>
                                        <input type="text" class="form-control" name="username" value="<%= user.username %>" readonly>
                                        <small class="text-muted">Username cannot be changed</small>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Email <span class="text-danger">*</span></label>
                                        <input type="email" class="form-control editable-field" name="email" value="<%= user.email %>" readonly required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">First Name</label>
                                        <input type="text" class="form-control editable-field" name="firstName" value="<%= user.firstName || '' %>" placeholder="Add your first name" readonly>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Last Name</label>
                                        <input type="text" class="form-control editable-field" name="lastName" value="<%= user.lastName || '' %>" placeholder="Add your last name" readonly>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Phone Number</label>
                                        <input type="tel" class="form-control editable-field" name="phoneNumber" value="<%= user.phoneNumber || '' %>" placeholder="+1 (555) 123-4567" readonly>
                                        <small class="text-muted">Used for booking confirmations and emergencies</small>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Date of Birth</label>
                                        <input type="date" class="form-control editable-field" name="dateOfBirth" value="<%= user.dateOfBirth ? user.dateOfBirth.toISOString().split('T')[0] : '' %>" readonly>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Address</label>
                                    <input type="text" class="form-control editable-field" name="address" value="<%= user.address || '' %>" placeholder="123 Main St, City, State, Country" readonly>
                                    <small class="text-muted">Helps with location-based recommendations</small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Bio</label>
                                    <textarea class="form-control editable-field" name="bio" rows="3" placeholder="Tell us about yourself, your travel interests, hosting experience..." readonly><%= user.bio || '' %></textarea>
                                    <small class="text-muted">Share your story with the community (max 500 characters)</small>
                                </div>
                                <div class="d-none" id="profileActions">
                                    <button type="submit" class="btn btn-primary me-2">
                                        <i class="fas fa-save me-1"></i>Save Changes
                                    </button>
                                    <button type="button" class="btn btn-secondary" onclick="cancelEdit()">
                                        <i class="fas fa-times me-1"></i>Cancel
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Account Settings -->
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="mb-0">Account Settings</h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <div>
                                        <h6 class="mb-1">Change Password</h6>
                                        <p class="mb-0 text-muted small">Update your account password</p>
                                    </div>
                                    <button class="btn btn-outline-secondary btn-sm" onclick="changePassword()">
                                        Change
                                    </button>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <div>
                                        <h6 class="mb-1">Email Notifications</h6>
                                        <p class="mb-0 text-muted small">Receive booking confirmations and updates</p>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="emailNotifications" checked>
                                    </div>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <div>
                                        <h6 class="mb-1">Marketing Emails</h6>
                                        <p class="mb-0 text-muted small">Receive promotional offers and travel tips</p>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="marketingEmails">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Statistics -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Your Statistics</h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <div class="stat-circle">
                                    <%= totalBookings %>
                                </div>
                                <p class="mb-0 text-muted">Total Bookings</p>
                            </div>

                            <div class="stat-item mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Member Since</span>
                                    <strong>
                                        <%= new Date(user.createdAt || Date.now()).toLocaleDateString('en-US', { 
                                            month: 'short', 
                                            year: 'numeric' 
                                        }) %>
                                    </strong>
                                </div>
                            </div>

                            <div class="stat-item mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Total Spent</span>
                                    <strong class="text-success">$<%= totalSpent.toLocaleString() %></strong>
                                </div>
                            </div>

                            <div class="stat-item mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Nights Stayed</span>
                                    <strong><%= totalNights %></strong>
                                </div>
                            </div>

                            <div class="stat-item mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Cities Visited</span>
                                    <strong><%= citiesVisited %></strong>
                                </div>
                            </div>

                            <hr>

                            <div class="achievements">
                                <h6 class="mb-2">Achievements</h6>
                                <% if (totalBookings >= 1) { %>
                                    <span class="badge bg-primary me-1 mb-1">First Timer</span>
                                <% } %>
                                <% if (totalBookings >= 5) { %>
                                    <span class="badge bg-success me-1 mb-1">Regular Guest</span>
                                <% } %>
                                <% if (totalBookings >= 10) { %>
                                    <span class="badge bg-warning me-1 mb-1">Travel Enthusiast</span>
                                <% } %>
                                <% if (citiesVisited >= 3) { %>
                                    <span class="badge bg-info me-1 mb-1">Explorer</span>
                                <% } %>
                                <% if (totalSpent >= 1000) { %>
                                    <span class="badge bg-purple me-1 mb-1">VIP Guest</span>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="mb-0">Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="/listings" class="btn btn-primary">
                                    <i class="fas fa-search me-2"></i>Browse Listings
                                </a>
                                <a href="/listings/new" class="btn btn-outline-primary">
                                    <i class="fas fa-plus me-2"></i>List Your Property
                                </a>
                                <button class="btn btn-outline-secondary" onclick="downloadBookingHistory()">
                                    <i class="fas fa-download me-2"></i>Download History
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-circle {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: bold;
    margin: 0 auto;
}

.stat-circle {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: bold;
    margin: 0 auto 10px;
}

.stat-item {
    padding: 8px 0;
    border-bottom: 1px solid #eee;
}

.stat-item:last-child {
    border-bottom: none;
}

.bg-purple {
    background-color: #6f42c1 !important;
}

.form-check-input:checked {
    background-color: #667eea;
    border-color: #667eea;
}

.editable-field[readonly] {
    background-color: #f8f9fa !important;
    cursor: not-allowed;
}

.editable-field:not([readonly]) {
    background-color: #fff !important;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
}

.form-label .text-danger {
    font-size: 0.875em;
}

.alert {
    border-radius: 8px;
    margin-bottom: 20px;
}

.profile-section {
    transition: all 0.3s ease;
}

.editing-mode {
    background-color: #f8f9ff;
    border: 2px dashed #667eea;
    border-radius: 10px;
    padding: 20px;
}
</style>

<script>
function editProfile() {
    const form = document.getElementById('profileForm');
    const editableFields = form.querySelectorAll('.editable-field');
    const actions = document.getElementById('profileActions');
    const editButton = document.querySelector('[onclick="editProfile()"]');
    
    // Enable editing for all editable fields
    editableFields.forEach(field => {
        field.removeAttribute('readonly');
        field.classList.add('border-primary');
        field.style.backgroundColor = '#fff';
    });
    
    // Show save/cancel buttons and hide edit button
    actions.classList.remove('d-none');
    editButton.style.display = 'none';
    
    // Focus on first editable field
    if (editableFields.length > 0) {
        editableFields[0].focus();
    }
}

function cancelEdit() {
    const form = document.getElementById('profileForm');
    const editableFields = form.querySelectorAll('.editable-field');
    const actions = document.getElementById('profileActions');
    const editButton = document.querySelector('[onclick="editProfile()"]');
    
    // Disable editing and remove highlighting
    editableFields.forEach(field => {
        field.setAttribute('readonly', true);
        field.classList.remove('border-primary');
        field.style.backgroundColor = '#f8f9fa';
    });
    
    // Hide save/cancel buttons and show edit button
    actions.classList.add('d-none');
    editButton.style.display = 'inline-block';
    
    // Reset form to original values
    location.reload();
}

// Form validation
function validateForm() {
    const email = document.querySelector('input[name="email"]').value;
    const phoneNumber = document.querySelector('input[name="phoneNumber"]').value;
    
    // Email validation
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(email)) {
        showAlert('Please enter a valid email address.', 'error');
        return false;
    }
    
    // Phone number validation (if provided)
    if (phoneNumber && phoneNumber.trim() !== '') {
        const phoneRegex = /^[\+]?[1-9][\d]{0,15}$/;
        if (!phoneRegex.test(phoneNumber.replace(/[\s\-\(\)]/g, ''))) {
            showAlert('Please enter a valid phone number.', 'error');
            return false;
        }
    }
    
    return true;
}

// Form submission handling
document.getElementById('profileForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Validate form before submission
    if (!validateForm()) {
        return;
    }
    
    const formData = new FormData(this);
    const submitButton = this.querySelector('button[type="submit"]');
    const originalText = submitButton.innerHTML;
    
    // Show loading state
    submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Saving...';
    submitButton.disabled = true;
    
    fetch('/dashboard/profile/update', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Show success message
            showAlert('Profile updated successfully!', 'success');
            // Reset form state after a short delay
            setTimeout(() => {
                location.reload();
            }, 1500);
        } else {
            showAlert('Error updating profile: ' + data.message, 'error');
        }
    })
    .catch(error => {
        showAlert('Error updating profile. Please try again.', 'error');
        console.error('Error:', error);
    })
    .finally(() => {
        // Reset button state
        submitButton.innerHTML = originalText;
        submitButton.disabled = false;
    });
});

function showAlert(message, type) {
    const alertDiv = document.createElement('div');
    alertDiv.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show`;
    alertDiv.innerHTML = `
        <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;
    
    const container = document.querySelector('.col-md-8');
    container.insertBefore(alertDiv, container.firstChild);
    
    // Auto dismiss after 5 seconds
    setTimeout(() => {
        if (alertDiv.parentNode) {
            alertDiv.remove();
        }
    }, 5000);
}

function changePassword() {
    // This would open a modal or redirect to password change page
    alert('Password change functionality would be implemented here');
}

function downloadBookingHistory() {
    // This would trigger a download of booking history
    alert('Download functionality would be implemented here');
}
</script>